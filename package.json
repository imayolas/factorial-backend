{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "chai": "^4.3.4",
    "concurrently": "^7.0.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "start:tsc": "tsc --watch",
    "start:ingestor": "nodemon ./dist/ingestor/app/ingestor-entrypoint.js",
    "start:api": "nodemon ./dist/api/app/api-entrypoint.js",
    "start:test": "mocha --require source-map-support/register --watch dist/**/*.test.js",
    "start": "concurrently npm:start:tsc npm:start:ingestor npm:start:api",
    "test": "mocha --require source-map-support/register dist/**/*.test.js",
    "prettier": "prettier --config .prettierrc '**/*.{js,ts,json}' --write"
  }
}
